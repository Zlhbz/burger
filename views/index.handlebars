<div class="row full">
    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>

    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">

        {{!-- <img src="../public/assets/img/burger.png" class="img-fluid" alt="Responsive image"> --}}
        <img src="assets/img/burger.png" alt="Burger" style="width:100px;height:100px; align-item:center"
            class="rounded mx-auto d-block">


        <h1 class=" d-flex justify-content-center">EAT-DA-BURGER</h1>

        <div class="row">

            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">

                <h5>Burgers are ready to Devoure!!</h5>

                <ul>
                    {{#each burger}}
                    {{#unless devoured}}
                    {{> burgers/burgers-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>

            </div>

            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">

                <h5>Burgers were Devoured!!</h5>

                <ul>
                    {{#each burger}}
                    {{#if devoured}}
                    {{> burgers/burgers-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>

        </div>
        <div class="row form_button d-flex justify-content-center">

            <form class="create-form">

                <div class="form-group">
                    <label for="exampleFormControlTextarea1"></label>
                    <textarea class="form-control" id="textarea1" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Submit">
                </div>

                <div>
                    <h5>Enter a burger you want to eat and submit button!</h5>
                </div>
            </form>
        </div>
    </div>

    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
</div>